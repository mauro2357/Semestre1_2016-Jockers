package BD;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;

public class ActualizacionBloquesRepositorio {
	public static boolean actualizar (String nombre_bloque,int aulas,int pisos,int banos,int laboratorios_salas,int oficinas_facultades,String oratorios,String parqueaderos,String zonas_estudio){
		boolean status = false;  
        Connection conn = null;  
        PreparedStatement pst = null;  
        ResultSet rs = null;  
  
        String url = "jdbc:mysql://localhost:3306/";  
        String dbName = "ucomaps";  
        String driver = "com.mysql.jdbc.Driver";  
        String userName = "root";  
        String password = "";  
        try {  
        	Class.forName(driver).newInstance();  
            conn = DriverManager.getConnection(url + dbName, userName, password);  
  
            pst = conn.prepareStatement("UPDATE bloques SET blo_aulas=? SET blo_pisos=? SET blo_banos=? SET blo_salas_laboratorios=? SET blo_oficinas_facultades=? SET blo_oratorio=? SET blo_parqueadero=? SET blo_zona_estudio=? WHERE blo_nombre=?"); 
            pst.setString(1, nombre_bloque);
            pst.setInt(2,aulas);
            pst.setInt(3, pisos);
            pst.setInt(4, banos);
            pst.setInt(5, laboratorios_salas);
            pst.setInt(6, oficinas_facultades);
            pst.setString(7, oratorios);
            pst.setString(8, parqueaderos);
            pst.setString(9, zonas_estudio);            
            System.out.println(pst);
  
            pst.executeUpdate();     
  
        } catch (Exception e) {  
            System.out.println(e);  
        } finally {  
            if (conn != null) {  
                try {  
                    conn.close();  
                } catch (SQLException e) {  
                    e.printStackTrace();  
                }  
            }  
            if (pst != null) {  
                try {  
                    pst.close();  
                } catch (SQLException e) {  
                    e.printStackTrace();  
                }  
            }  
            if (rs != null) {  
                try {  
                    rs.close();  
                } catch (SQLException e) {  
                    e.printStackTrace();  
                }  
            }  
        }  
        return status;  
    }  
}  
        
